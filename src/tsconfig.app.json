{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "baseUrl": "",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "rootDir": ".",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node", "lodash", "jasmine"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@main/*": ["app/main/*"],
      "@core/*": ["app/core/*"],
      "@shared/*": ["app/shared/*"],
      "@user/*": ["app/user/*"],
      "@dashboard/*": ["app/dashboard/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
